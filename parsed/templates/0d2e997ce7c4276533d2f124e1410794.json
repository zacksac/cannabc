{
  "components/halothemes/home/home-subscription-form": "<div class=\"halo-block halo-subscription\">\n    <div class=\"container container--full halo-fadeInUp\" data-halo-animate=\"1\">\n        <h3 class=\"title\">{{lang 'newsletter.subscribe_title'}}</h3>\n        {{#if settings.show_newsletter_summary }}\n            <p class=\"summary\">{{settings.newsletter_summary}}</p>\n        {{/if}}\n\n        <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n            <fieldset class=\"form-fieldset\">\n                <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n                <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n                <input type=\"hidden\" name=\"check\" value=\"1\">\n                <div class=\"form-field\">\n                    <label class=\"form-label is-srOnly\" for=\"nl_email3\">{{lang 'common.email_address'}}</label>\n                    <div class=\"form-prefixPostfix wrap\">\n                        <input class=\"form-input\"\n                               id=\"nl_email3\"\n                               name=\"nl_email\"\n                               type=\"email\"\n                               value=\"{{customer.email}}\"\n                               placeholder=\"{{lang 'newsletter.subscribe_email'}}\"\n                               aria-describedby=\"alertBox-message-text\"\n                               aria-required=\"true\"\n                        >\n                        <input class=\"button button--tertiary form-prefixPostfix-button--postfix\"\n                               type=\"submit\"\n                               value=\"{{lang 'newsletter.subscribe_button'}}\"\n                        >\n                    </div>\n                </div>\n            </fieldset>\n        </form>\n    </div>\n</div>"
}
